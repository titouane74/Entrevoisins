<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageNeighbour"
        android:layout_width="414dp"
        android:layout_height="274dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars[3]"
        android:contentDescription="@string/img_neighbour"/>

    <TextView
        android:id="@+id/nameNeighbour_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/imageNeighbour"
        app:layout_constraintBottom_toBottomOf="@id/imageNeighbour"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:hint="Florence"
        android:textColor="@color/colorBlanc"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/cardInfoNeighbour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageNeighbour"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="5dp"
        >

        <RelativeLayout
            android:id="@+id/cardInfoNeighbour_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/cardNameNeighbour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Florence"
                android:textSize="30sp"
                />

            <TextView
                android:id="@+id/cardAddressNeighbour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Address"
                android:textSize="20sp"
                android:layout_below="@id/cardNameNeighbour"
                />

            <TextView
                android:id="@+id/cardSiteNeighbour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Site"
                android:textSize="20sp"
                android:layout_below="@id/cardPhoneNeighbour"
                />

            <TextView
                android:id="@+id/cardPhoneNeighbour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Phone"
                android:textSize="20sp"
                android:layout_below="@id/cardAddressNeighbour"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardAboutMe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardInfoNeighbour"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="5dp"
        >

        <RelativeLayout
            android:id="@+id/cardAboutMe_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/cardTitleAboutMe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tv_about_me"
                android:textSize="30sp"
                />

            <TextView
                android:id="@+id/cardTextAboutMe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Texte"
                android:textSize="20sp"
                android:layout_below="@id/cardTitleAboutMe"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>